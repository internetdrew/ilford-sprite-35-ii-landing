---
import Card from './Card.astro';

import sunIcon from '/sun.png';
import cloudIcon from '/cloud.png';
import houseIcon from '/house.png';
---

<section>
  <div class='container'>
    <div id='best-shot'>
      <h2 class='heading'>Take Your Best Shot</h2>
      <p class='story'>And take the guesswork out of which film to use.</p>
    </div>
    <div class='cards-container'>
      <Card iconSource={sunIcon} label='Sunny' flash={false} />
      <Card iconSource={cloudIcon} label='Cloudy' flash={true} />
      <Card iconSource={houseIcon} label='Indoors' flash={true} />
    </div>
  </div>
</section>

<style>
  section {
    display: flex;
    justify-content: center;
    text-align: center;
    margin-top: 10rem;
  }
  .story {
    font-size: 1.6rem;
  }

  #best-shot {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .container img {
    width: 40rem;
    max-width: 100%;
    object-fit: contain;
    border-radius: 20px;
    margin-top: 2rem;
  }

  .cards-container {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4rem;
    padding: 2rem;
  }

  @media (max-width: 768px) {
    .container h2 {
      font-size: 1.6rem;
    }

    .container p {
      font-size: 1.2rem;
      margin-top: 0.3rem;
    }
  }

  @media (max-width: 1024px) {
    .cards-container {
      width: 80%;
      grid-template-columns: 1fr;
    }
    section {
      margin-top: 6rem;
    }
  }
</style>
