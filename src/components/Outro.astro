---
import inTheWild from '/sprite-in-wild.webp';
import Button from './Button.astro';
---

<section>
  <div class='container'>
    <div class='section-heading'>
      <h2 class='heading'>Adventure Awaits</h2>
      <p>Live it up! We'll capture the moments you'll never want to forget.</p>
    </div>
    <div class='image-container'>
      <img src={inTheWild} alt='' />
    </div>
    <div class='button-container'>
      <form action='/api/create-checkout-session' method='POST'>
        <Button type='primary' text='Buy Now' />
      </form>
    </div>
  </div>
</section>

<style>
  section {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 10rem 0 2rem 0;
  }

  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .heading {
    text-align: center;
  }

  .section-heading p {
    text-align: center;
    font-size: 1.4rem;
  }

  .image-container {
    max-width: 100%;
    margin: 2rem 0;
    display: flex;
    justify-content: center;
  }

  .image-container img {
    object-fit: contain;
    border-radius: 20px;
  }

  .button-container {
    display: flex;
    justify-content: center;
  }

  @media (min-width: 1670px) {
    section {
      padding: 1rem;
    }
  }

  @media (max-width: 768px) {
    .heading {
      font-size: 1.6rem;
    }
    .section-heading p {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 425px) {
    section {
      margin-bottom: 8rem;
    }
  }
</style>
