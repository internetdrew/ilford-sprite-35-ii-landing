---
interface Props {
  iconClass: string;
  label: string;
  flash: boolean;
}

const { iconClass, label, flash } = Astro.props;
---

<div class='card'>
  <h3 class='card-heading'>
    <span>
      <i class={iconClass}></i>
    </span>{label}
  </h3>
  <div class='card-details'>
    <div class='row'>
      <h4 class='category'>Flash</h4>
      <div class='value'>{flash ? 'On' : 'Off'}</div>
    </div>
    <div class='row'>
      <h4 class='category'>ISO 200</h4>
      <div class='value'>
        {
          label.toLocaleLowerCase() === 'sunny' ? (
            <i class='ph-warning-circle' />
          ) : (
            <i class='ph-x-circle' />
          )
        }
      </div>
    </div>
    <div class='row'>
      <h4 class='category'>ISO 400</h4>
      <div class='value'>
        {
          label.toLocaleLowerCase() === 'sunny' ? (
            <i class='ph-check-circle' />
          ) : (
            <i class='ph-warning-circle' />
          )
        }
      </div>
    </div>
    <div class='row'>
      <h4 class='category'>ISO 800</h4>
      <div class='value'><i class='ph-check-circle'></i></div>
    </div>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background: #f1f3f5;
    background: -moz-linear-gradient(
      0deg,
      rgba(241, 243, 245, 1) 0%,
      rgba(11, 114, 133, 1) 100%
    );
    background: -webkit-linear-gradient(
      0deg,
      rgba(241, 243, 245, 1) 0%,
      rgba(11, 114, 133, 1) 100%
    );
    background: linear-gradient(
      0deg,
      rgba(241, 243, 245, 1) 0%,
      rgba(11, 114, 133, 1) 100%
    );
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#f1f3f5",endColorstr="#0b7285",GradientType=1);
    border-radius: 25px;
    padding: 1rem 2rem;
    /* box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.2),
      0 6px 20px 0 rgba(0, 0, 0, 0.19); */
    box-shadow: 5px 5px 5px rgb(0, 0, 0, 0.2);
    /* color: #fff; */
  }

  .card-heading {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: center;
    font-size: 1.4rem;
    margin-bottom: 1.4rem;
  }

  .card-heading i {
    font-size: 2rem;
  }

  .card-details .row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .row h4 {
    font-size: 1.1rem;
  }

  .value i {
    text-align: center;
    font-size: 1.6rem;
  }
  .card-heading i:hover {
    -webkit-animation-name: wiggle;
    -ms-animation-name: wiggle;
    -ms-animation-duration: 1000ms;
    -webkit-animation-duration: 1000ms;
    -webkit-animation-iteration-count: 1;
    -ms-animation-iteration-count: 1;
    -webkit-animation-timing-function: ease-in-out;
    -ms-animation-timing-function: ease-in-out;
  }

  @-webkit-keyframes wiggle {
    0% {
      -webkit-transform: rotate(10deg);
    }
    25% {
      -webkit-transform: rotate(-10deg);
    }
    50% {
      -webkit-transform: rotate(20deg);
    }
    75% {
      -webkit-transform: rotate(-5deg);
    }
    100% {
      -webkit-transform: rotate(0deg);
    }
  }

  @-ms-keyframes wiggle {
    0% {
      -ms-transform: rotate(1deg);
    }
    25% {
      -ms-transform: rotate(-1deg);
    }
    50% {
      -ms-transform: rotate(1.5deg);
    }
    75% {
      -ms-transform: rotate(-5deg);
    }
    100% {
      -ms-transform: rotate(0deg);
    }
  }

  @keyframes wiggle {
    0% {
      transform: rotate(10deg);
    }
    25% {
      transform: rotate(-10deg);
    }
    50% {
      transform: rotate(20deg);
    }
    75% {
      transform: rotate(-5deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }
</style>

<script src='https://unpkg.com/phosphor-icons'></script>
