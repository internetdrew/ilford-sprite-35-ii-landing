---
interface Props {
  iconClass: string;
  label: string;
  flash: boolean;
}

const { iconClass, label, flash } = Astro.props;
---

<div class='card'>
  <h3 class='card-heading'>
    <span>
      <i class={iconClass}></i>
    </span>{label}
  </h3>
  <div class='card-details'>
    <div class='row'>
      <h4 class='category'>Flash</h4>
      <div class='value'>{flash ? 'On' : 'Off'}</div>
    </div>
    <div class='row'>
      <h4 class='category'>ISO 200</h4>
      <div class='value'>
        {
          label.toLocaleLowerCase() === 'sunny' ? (
            <i class='ph-warning-circle' />
          ) : (
            <i class='ph-x-circle' />
          )
        }
      </div>
    </div>
    <div class='row'>
      <h4 class='category'>ISO 400</h4>
      <div class='value'>
        {
          label.toLocaleLowerCase() === 'sunny' ? (
            <i class='ph-check-circle' />
          ) : (
            <i class='ph-warning-circle' />
          )
        }
      </div>
    </div>
    <div class='row'>
      <h4 class='category'>ISO 800</h4>
      <div class='value'><i class='ph-check-circle'></i></div>
    </div>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background-color: rgb(255, 240, 246, 0.8);
    border-radius: 25px;
    padding: 1rem 2rem;
    box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.2),
      0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }

  .card-heading {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: center;
    font-size: 1.4rem;
    margin-bottom: 1.4rem;
  }

  .card-heading i {
    font-size: 1.6rem;
  }

  .card-details .row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .row h4 {
    font-size: 1.1rem;
  }

  .value i {
    text-align: center;
    font-size: 1.6rem;
  }
</style>

<script src='https://unpkg.com/phosphor-icons'></script>
